{
    "name": "koff/i18n-form-bundle",
    "type": "symfony-bundle",
    "description": "Translate your doctrine objects easily with some helps",
    "keywords": [
        "symfony2",
        "doctrine2",
        "i18n",
        "internationalization",
        "translation",
        "translatable",
        "form",
        "knplabs"
    ],
    "homepage": "https://github.com/sadikoff/i18n-form-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "David ALLIX",
            "homepage": "http://a2lix.fr"
        },
        {
            "name": "Sadicov Vladimir",
            "homepage": "https://koff.pro"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "doctrine/doctrine-bundle": "^2.0",
        "doctrine/orm": "^2.3",
        "symfony/framework-bundle": "^4.4|^5.0",
        "symfony/form": "^4.4|^5.0",
        "symfony/twig-bundle": "^4.4|^5.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2",
        "phpunit/phpunit": "^9.5",
        "symfony/validator": "^4.4|^5.0",
        "symfony/yaml": "^4.4|^5.0"
    },
    "suggest": {
        "knplabs/doctrine-behaviors": "For Knp strategy",
        "stof/doctrine-extensions-bundle": "For Atlantic18/DoctrineExtensions"
    },
    "config": {
        "preferred-install":"dist",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Koff\\Bundle\\I18nFormBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Koff\\Bundle\\I18nFormBundle\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.x-dev"
        }
    }
}
